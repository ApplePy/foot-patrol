<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:minWidth="25px"
    p1:minHeight="25px"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:background="#ff4f2683">
    <ImageView
        p1:src="@drawable/WesternCampusPolice"
        p1:layout_width="match_parent"
        p1:layout_height="250dp"
        p1:id="@+id/emergencyImage"
        p1:scaleType="centerCrop" />
    <TextView
        p1:textAppearance="?android:attr/textAppearanceMedium"
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/textView1"
        p1:layout_marginTop="230dp"
        p1:layout_marginLeft="5dp"
        p1:textStyle="bold"
        p1:text="EMERGENCY CONTACTS" />
    <ImageButton
        p1:src="@drawable/ic_phone_black_24dp"
        p1:layout_width="50dp"
        p1:layout_height="50dp"
        p1:id="@+id/callButton1"
        p1:layout_below="@+id/emergencyImage"
        p1:scaleType="fitCenter"
        p1:background="#807F83"
        p1:layout_marginTop="60dp"
        p1:layout_marginLeft="80dp" />
    <ImageButton
        p1:src="@drawable/ic_phone_black_24dp"
        p1:layout_width="50dp"
        p1:layout_height="50dp"
        p1:id="@+id/callButton2"
        p1:layout_below="@+id/callButton1"
        p1:scaleType="fitCenter"
        p1:background="#807F83"
        p1:layout_marginTop="50dp"
        p1:layout_marginLeft="80dp" />
    <Button
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/footPatrolHQBtn"
        p1:layout_toRightOf="@+id/callButton2"
        p1:layout_below="@+id/campusPoliceBtn"
        p1:text="FOOT PATROL HQ"
        p1:layout_marginBottom="0.0dp"
        p1:layout_marginTop="50dp" />
    <Button
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/campusPoliceBtn"
        p1:layout_toRightOf="@+id/callButton1"
        p1:layout_below="@+id/emergencyImage"
        p1:layout_marginTop="60dp"
        p1:text="CAMPUS POLICE" />
</RelativeLayout>