<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:id="@+id/userdrawerMF"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent">
    <RelativeLayout
        p1:minWidth="25px"
        p1:minHeight="25px"
        p1:layout_width="match_parent"
        p1:fillViewport="true"
        p1:layout_height="match_parent"
        p1:gravity="center_vertical">
        <fragment
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="match_parent"
            p1:layout_height="match_parent"
            p1:id="@+id/userMapMF"
            class="com.google.android.gms.maps.SupportMapFragment" />
        <RelativeLayout
            p1:minWidth="25px"
            p1:minHeight="25px"
            p1:layout_width="match_parent"
            p1:layout_height="175dp"
            p1:id="@+id/userInnerRelativeMF"
            p1:layout_alignParentBottom="true"
            p1:background="@drawable/BorderResource">
            <Button
                p1:layout_width="wrap_content"
                p1:layout_height="35dp"
                p1:id="@+id/requestPickupBtn1"
                p1:layout_centerVertical="true"
                p1:text="REQUEST PICKUP"
                p1:background="#807F83"
                p1:layout_centerHorizontal="true"
                p1:layout_alignParentBottom="true"
                p1:layout_marginBottom="10dp" />
            <EditText
                p1:layout_width="350dp"
                p1:layout_height="25dp"
                p1:id="@+id/userName6"
                p1:layout_above="@+id/userToLocation1"
                p1:layout_marginRight="10dp"
                p1:background="@drawable/FormEntry"
                p1:layout_marginTop="5dp"
                p1:layout_centerHorizontal="true"
                p1:textColor="#ff4f2683"
                p1:paddingLeft="5dp"
                p1:textColorHint="#ff4f2683"
                p1:hint="Name (Optional)"
                p1:singleLine="true" />
            <EditText
                p1:layout_width="350dp"
                p1:layout_height="25dp"
                p1:id="@+id/userToLocation1"
                p1:layout_above="@+id/userAdditionalInfo1"
                p1:background="@drawable/FormEntry"
                p1:layout_marginRight="10dp"
                p1:layout_centerHorizontal="true"
                p1:layout_centerVertical="false"
                p1:textColor="#ff4f2683"
                p1:paddingLeft="5dp"
                p1:layout_marginTop="5dp"
                p1:textColorHint="#ff4f2683"
                p1:hint="Destination"
                p1:singleLine="true" />
            <EditText
                p1:layout_width="350dp"
                p1:layout_height="25dp"
                p1:id="@+id/userAdditionalInfo1"
                p1:layout_above="@+id/requestPickupBtn1"
                p1:layout_centerHorizontal="true"
                p1:background="@drawable/FormEntry"
                p1:layout_marginRight="10dp"
                p1:textColor="#ff4f2683"
                p1:paddingLeft="5dp"
                p1:layout_marginTop="5dp"
                p1:layout_marginBottom="5dp"
                p1:textColorHint="#ff4f2683"
                p1:hint="Additional Information"
                p1:singleLine="true" />
            <TextView
                p1:textAppearance="?android:attr/textAppearanceLarge"
                p1:layout_width="wrap_content"
                p1:layout_height="wrap_content"
                p1:id="@+id/pickupInfo"
                p1:text="Pickup Information"
                p1:layout_above="@+id/userName5"
                p1:layout_centerHorizontal="true"
                p1:layout_marginBottom="5dp" />
            <TextView
                p1:id="@+id/line"
                p1:paddingTop="5dip"
                p1:gravity="center_horizontal"
                p1:layout_below="@+id/pickupInfo"
                p1:layout_width="match_parent"
                p1:layout_height="1dp"
                p1:background="#807F83"
                p1:layout_marginBottom="10dp" />
        </RelativeLayout>
        <ImageButton
            p1:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            p1:layout_width="30dp"
            p1:layout_height="100dp"
            p1:id="@+id/userSideTabMF"
            p1:background="@drawable/BorderResource"
            p1:layout_centerVertical="true"
            p1:scaleType="centerInside" />
        <SearchView
            p1:layout_width="match_parent"
            p1:layout_height="40dp"
            p1:id="@+id/userSearchViewMF"
            p1:layout_alignParentTop="true"
            p1:layout_marginTop="20dp"
            p1:background="@drawable/BorderResource" />
        <ListView
            p1:id="@+id/userSearchListViewMF"
            p1:layout_width="match_parent"
            p1:layout_height="150dp"
            p1:layout_marginTop="60dp"
            p1:background="@drawable/BorderResource"
            p1:divider="#807F83" />
        <TextView
            p1:layout_width="match_parent"
            p1:layout_height="20dp"
            p1:id="@+id/userSVDescriptionMF"
            p1:text="SEARCH FOR LOCATION"
            p1:background="@drawable/BorderResource"
            p1:textAllCaps="true"
            p1:textStyle="bold"
            p1:gravity="center_horizontal" />
    </RelativeLayout>
    <ListView
        p1:id="@+id/userListViewMF"
        p1:layout_width="150dp"
        p1:layout_height="200dp"
        p1:layout_gravity="left|center_vertical"
        p1:background="@drawable/BorderResource"
        p1:divider="#807F83" />
</android.support.v4.widget.DrawerLayout>