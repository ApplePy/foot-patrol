<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:background="#ff4f2683"
    p1:layout_width="match_parent"
    p1:layout_height="220dp"
    p1:id="@+id/relativeLayout">
    <TextView
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/userName"
        p1:text="NAME:"
        p1:layout_centerHorizontal="true"
        p1:layout_marginTop="10dp" />
    <TextView
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/fromLocation"
        p1:text="START LOCATION:"
        p1:layout_centerHorizontal="true"
        p1:layout_below="@id/userName"
        p1:layout_marginTop="10dp" />
    <TextView
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/toLocation"
        p1:text="END LOCATION:"
        p1:layout_centerHorizontal="true"
        p1:layout_below="@id/fromLocation"
        p1:layout_marginTop="10dp" />
    <TextView
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/additionalInfo"
        p1:text="ADDITIONAL INFO:"
        p1:layout_centerHorizontal="true"
        p1:layout_below="@id/toLocation"
        p1:layout_marginTop="10dp" />
    <Button
        p1:layout_width="wrap_content"
        p1:layout_height="wrap_content"
        p1:id="@+id/acceptRequest"
        p1:text="ACCEPT REQUEST"
        p1:layout_below="@id/additionalInfo"
        p1:layout_centerHorizontal="true"
        p1:layout_marginTop="10dp"
        p1:background="#807F83" />
    <ImageButton
        p1:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        p1:layout_width="60dp"
        p1:layout_height="60dp"
        p1:id="@+id/leftArrow"
        p1:layout_below="@id/acceptRequest"
        p1:scaleType="fitCenter"
        p1:background="#ffffffff"
        p1:layout_alignParentStart="true" />
    <ImageButton
        p1:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        p1:layout_width="60dp"
        p1:layout_height="60dp"
        p1:id="@+id/rightArrow"
        p1:layout_below="@id/acceptRequest"
        p1:scaleType="fitCenter"
        p1:background="#ffffffff"
        p1:layout_alignParentEnd="true" />
    <ImageButton
        p1:src="@drawable/ic_close_black_24dp"
        p1:layout_width="30dp"
        p1:layout_height="30dp"
        p1:id="@+id/closeButton"
        p1:layout_alignParentTop="true"
        p1:layout_alignParentRight="true"
        p1:scaleType="fitCenter"
        p1:background="#807F83" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        p1:layout_width="40dp"
        p1:layout_height="40dp"
        p1:id="@+id/spinner1"
        p1:spinnerMode="dialog"
        p1:layout_centerHorizontal="true"
        p1:layout_alignParentBottom="true" />
</RelativeLayout>